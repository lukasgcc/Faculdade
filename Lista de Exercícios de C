//Imprimir a Tabela de Multiplicação

#include <stdio.h>

int main() {
    int numero;
    printf("Digite o numero: ");
    scanf("%d", &numero);

    for (int i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", numero, i, numero * i);
    }

    return 0;
}

